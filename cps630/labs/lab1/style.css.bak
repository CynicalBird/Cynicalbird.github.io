/* Link style */
a
{
	color: white;
	text-decoration: none;
}

/* Breakpoint 2 p>=768px */
@media only screen and (min-width: 768px)
{
	/* Document and body selector */
	html,body	{height:100%;}
	
	/* col-x selector */	
	[class*=col-] { float:left; }

	/* Icon image class */
	img.icon {width: 25%;}

	/* Transition property when element is hovered */
	#TranSleep-overlay:hover ~  .overlay , #TranSleep:hover ~ .overlay {width: 100%;}
	
	.menubar-button { width: 5%;}
	/* Left element of menu bar */
	.left { width: 90%; }
	
	/* Right element of menu bar */
	.right { width: 10%; }

	.col-12	{width: 100%;}
	
	.col-6	{width: 100%;}

	.col-4	{width: 100%;}
	
	.col-3	{width: 50%;}
}

/* Breakpoint 3 p>=1280px */
@media only screen and (min-width:1280px)
{
	html,body	{ height: 100%; }
	[class*=col-] 	{ float: left;  margin: 0px;}

	#TranSleep-overlay:hover ~  .overlay , #TranSleep:hover ~ .overlay	{width: 100%;}

	.item	{ margin:0px; padding: 0px; }	
	
	
	div.sidebar-background
	{
		display: initial;
		position:absolute;
		top:0;
		bottom:0;
		min-height: 100%;
		width: 25%;
		z-index: -1;
		left:0;
		right:0;
	}
	
	img.icon{ width: 70%; }
	
	.menubar-icon:	{ width: 5%; }	

	.left	{ width:95%; }
	
	.right	{ width:5%; }
	
	.col-12	{ width: 100%; }
	
	.col-11	{ width: 100%; }
	
	.col-10 { width: 100%; }

	.col-9	{ width: 100%; }	

	.col-6	{ width: 50%; }
	
	.col-4	{ width: 33.33% }
	
	.col-3	{ width: 25%; }
	
	.col-2	{ width: 33.32%; }		

	.col-1 	{ width: 16.66%; }
	
	.menubar{ width: 100%; }

}

/* Breakpoint 4 p>=1920px */
@media only screen and (min-width:1920px)
{
	/*background-color: red;*/
	div.sidebar
        {
		align-items: stretch;
		display: initial;
		min-height: 100%;
	}

	.content-container 
	{ 
		width: 66.66%; 
		float: left; 
		display: inline-block;
		margin-top: 10px; 
	}
	
	.col-12 {width: 100%;}

	.col-11 {width: 91.66%;}

	.col-10 {width: 83.33%;}

	.col-9  {width: 75%;}

	.col-6  {width: 50%;}

	.col-4  {width: 33.33%}

	.col-3  {width: 25%;}

	.col-2  {width: 16.66%;}

	.col-1  {width: 8.33%;}

	.menubar{width: 100%;}
}

