/* Import google web font */
@import url('https://fonts.googleapis.com/css?family=Roboto+Condensed');

/* Selector if attribute "class" contains and begins with col- */
[class*=col-] , [class^=col-] 
{
	/* All elements take up 100% of a row (all collumns) */
	width: 100%;
	/* Elements float to the left */
	float: left;
	/* Space between container and content */
	padding: 15px;
}

b.accent { color:#26A69A; }

b.secondary { color: #5C6BC0; }

/* Removes bullet points from elements ul */
/*.accent*/ ul	{ list-style-type: none; }

